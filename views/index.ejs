<div class="container">
  <h1 class="text-center">Welcome to Drink Lab!</h1>
  <p class="text-center">
    <a href="/faves">Lip Schhmackin' Faves</a>
  </p>

  <% drink.forEach(function(pokemon) { %>
    <div 
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>